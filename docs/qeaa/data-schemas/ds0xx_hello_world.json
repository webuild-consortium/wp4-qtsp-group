{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hello World Attestation Schema",
  "type": "object",
  "properties": {
    "message": {
      "type": "string",
      "const": "Hello World!"
    },
    "issuer": {
      "type": "string"
    },
    "issuedAt": {
      "type": "string",
      "format": "date-time"
    },
    "expiry": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "message",
    "issuer",
    "issuedAt",
    "expiry"
  ],
  "allOf": [
    {
      "$comment": "expiry must be \u226424h after issuedAt (enforce in implementation)"
    }
  ]
}